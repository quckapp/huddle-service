# =============================================================================
# HUDDLE SERVICE - Environment Configuration Example
# =============================================================================
# Copy this file to .env and update with your values

# Application
MIX_ENV=dev
PORT=4005
PHX_HOST=localhost
PHX_SERVER=true

# Security
SECRET_KEY_BASE=your_secret_key_base_min_64_chars
JWT_SECRET=your_jwt_secret

# MongoDB
MONGODB_URL=mongodb://user:password@localhost:27017/huddle_db?authSource=admin

# Redis
REDIS_URL=redis://:password@localhost:6379

# Kafka
KAFKA_BROKERS=localhost:9092

# Auth Service
AUTH_SERVICE_URL=http://localhost:8081

# Huddle Configuration
MAX_PARTICIPANTS_PER_HUDDLE=50
HUDDLE_IDLE_TIMEOUT_MINUTES=30

# Erlang Distribution
RELEASE_COOKIE=your_erlang_cookie

# Observability
JAEGER_ENDPOINT=http://localhost:14268/api/traces
LOG_LEVEL=debug
