# =============================================================================
# HUDDLE SERVICE - Test Environment
# =============================================================================

# Application
MIX_ENV=test
PORT=4105
PHX_HOST=localhost
PHX_SERVER=false

# Security
SECRET_KEY_BASE=test_secret_key_base_min_64_chars_long_for_phoenix_app_1234567890abcdef
JWT_SECRET=test_jwt_secret

# MongoDB
MONGODB_URL=mongodb://admin:admin_secret@localhost:27017/huddle_db_test?authSource=admin

# Redis
REDIS_URL=redis://:redis_secret@localhost:6379/1

# Kafka
KAFKA_BROKERS=localhost:9092

# Auth Service
AUTH_SERVICE_URL=http://localhost:8081

# Huddle Configuration
MAX_PARTICIPANTS_PER_HUDDLE=10
HUDDLE_IDLE_TIMEOUT_MINUTES=5
HUDDLE_MAX_DURATION_MINUTES=60

# Erlang Distribution
RELEASE_COOKIE=quckapp_test_cookie
NODE_NAME=huddle_test@localhost

# Observability
JAEGER_ENDPOINT=
LOG_LEVEL=warn

# Feature Flags
ENABLE_METRICS=false
ENABLE_TRACING=false
ENABLE_RECORDING=false
