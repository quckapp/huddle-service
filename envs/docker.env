# =============================================================================
# HUDDLE SERVICE - Docker Environment
# =============================================================================

# Application
MIX_ENV=prod
PORT=4005
PHX_HOST=localhost
PHX_SERVER=true

# Security
SECRET_KEY_BASE=dev_secret_key_base_min_64_chars_long_for_phoenix_app_1234567890abcdef
JWT_SECRET=dev_jwt_secret_change_in_production

# MongoDB
MONGODB_URL=mongodb://admin:admin_secret@mongodb:27017/huddle_db?authSource=admin

# Redis
REDIS_URL=redis://:redis_secret@redis:6379

# Kafka
KAFKA_BROKERS=kafka:9092

# Auth Service
AUTH_SERVICE_URL=http://auth-service:8081

# Huddle Configuration
MAX_PARTICIPANTS_PER_HUDDLE=50
HUDDLE_IDLE_TIMEOUT_MINUTES=30
HUDDLE_MAX_DURATION_MINUTES=480

# Erlang Distribution
RELEASE_COOKIE=quckapp_dev_cookie
NODE_NAME=huddle@huddle-service

# Observability
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
LOG_LEVEL=info

# Feature Flags
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_RECORDING=false
