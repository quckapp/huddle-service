# =============================================================================
# HUDDLE SERVICE - Production Environment
# =============================================================================

# Application
MIX_ENV=prod
PORT=4005
PHX_HOST=quckapp.com
PHX_SERVER=true

# Security
SECRET_KEY_BASE=${SECRET_KEY_BASE}
JWT_SECRET=${JWT_SECRET}

# MongoDB
MONGODB_URL=${MONGODB_URL}

# Redis
REDIS_URL=${REDIS_URL}

# Kafka
KAFKA_BROKERS=${KAFKA_BROKERS}

# Auth Service
AUTH_SERVICE_URL=http://auth-service:8081

# Huddle Configuration
MAX_PARTICIPANTS_PER_HUDDLE=100
HUDDLE_IDLE_TIMEOUT_MINUTES=30
HUDDLE_MAX_DURATION_MINUTES=480

# Erlang Distribution
RELEASE_COOKIE=${ERLANG_COOKIE}
NODE_NAME=huddle@${HOSTNAME}

# Observability
JAEGER_ENDPOINT=${JAEGER_ENDPOINT}
LOG_LEVEL=info

# Feature Flags
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_RECORDING=true

# Performance
POOL_SIZE=20
MAX_CONCURRENT_HUDDLES=1000
